{
  "name": "cyrus-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Cyrus - Linear Claude Agent integration",
  "packageManager": "pnpm@10.11.0",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "test:packages": "pnpm --filter './packages/*' test",
    "test:packages:run": "pnpm --filter './packages/*' test:run",
    "test:apps": "pnpm --filter './apps/*' test",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "pnpm -r format"
  },
  "keywords": [
    "linear",
    "claude",
    "linear-agent",
    "cyrus",
    "anthropic",
    "ai",
    "agent",
    "monorepo"
  ],
  "author": "Ceedar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ceedaragents/cyrus"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}