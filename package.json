{
  "name": "linear-claude-agent",
  "version": "1.0.0",
  "description": "Integration between Linear and Claude for automated issue processing using Linear's Agent API",
  "main": "index.mjs",
  "bin": {
    "linear-claude-agent": "./index.mjs"
  },
  "type": "module",
  "scripts": {
    "start": "node index.mjs",
    "dev": "nodemon index.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "oauth:server": "node scripts/start-auth-server.mjs",
    "oauth:reset": "node scripts/reset-oauth.mjs",
    "lint": "eslint --max-warnings 0 --cache --cache-strategy content",
    "lint:fix": "eslint --max-warnings 0 --cache --cache-strategy content --fix"
  },
  "packageManager": "pnpm@10.11.0",
  "keywords": [
    "linear",
    "claude",
    "linear-agent",
    "cyrus",
    "anthropic",
    "ai",
    "agent",
    "issue-tracker",
    "webhook",
    "oauth"
  ],
  "author": "Ceedar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ceedaragents/cyrus"
  },
  "dependencies": {
    "@linear/sdk": "^39.0.0",
    "child_process": "^1.0.2",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "file-type": "^21.0.0",
    "fs-extra": "^11.3.0",
    "node-fetch": "^2.7.0",
    "path": "^0.12.7",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@vitest/ui": "^3.1.4",
    "eslint": "^9.28.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "nodemon": "^2.0.22",
    "prettier": "^3.5.3",
    "vitest": "^3.1.4"
  }
}
