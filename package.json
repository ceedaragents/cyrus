{
  "name": "linear-claude-agent",
  "version": "1.0.0",
  "description": "Integration between Linear and Claude for automated issue processing using Linear's Agent API",
  "main": "dist/index.js",
  "bin": {
    "linear-claude-agent": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit -p tsconfig.lint.json",
    "oauth:server": "ts-node scripts/start-auth-server.ts",
    "oauth:reset": "ts-node scripts/reset-oauth.ts"
  },
  "packageManager": "pnpm@10.11.0",
  "keywords": [
    "linear",
    "claude",
    "linear-agent",
    "anthropic",
    "ai",
    "agent",
    "issue-tracker",
    "webhook",
    "oauth"
  ],
  "author": "Ceedar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ceedario/secret-agents"
  },
  "dependencies": {
    "@linear/sdk": "^39.0.0",
    "child_process": "^1.0.2",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "file-type": "^21.0.0",
    "fs-extra": "^11.3.0",
    "node-fetch": "^2.7.0",
    "path": "^0.12.7",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.15.29",
    "@types/node-fetch": "^2.6.12",
    "@vitest/ui": "^3.1.4",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  }
}