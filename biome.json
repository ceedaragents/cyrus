{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"includes": ["**", "!**/dist-electron", "!**/dist"]
	},
	"linter": {
		"rules": {
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "off",
				"noUnsafeDeclarationMerging": "off",
				"noTemplateCurlyInString": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off"
			}
		},
		"domains": {
			"react": "recommended",
			"test": "recommended"
		}
	},
	"formatter": {
		"formatWithErrors": true
	},
	"vcs": {
		"enabled": true,
		"useIgnoreFile": true,
		"clientKind": "git",
		"defaultBranch": "main"
	}
}
