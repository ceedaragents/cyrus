{
  "name": "cyrus-ai",
  "version": "0.1.3",
  "description": "AI-powered Linear issue automation using Claude",
  "main": "app.mjs",
  "bin": {
    "cyrus": "./app.mjs"
  },
  "type": "module",
  "scripts": {
    "start": "node app.mjs",
    "dev": "nodemon app.mjs",
    "test": "vitest run",
    "test:run": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "prepublishOnly": "cd ../.. && pnpm build"
  },
  "files": [
    "app.mjs",
    "services/**/*.mjs",
    "utils/**/*.mjs"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ceedaragents/cyrus.git",
    "directory": "apps/cli"
  },
  "keywords": [
    "linear",
    "claude",
    "ai",
    "automation",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@linear/sdk": "^39.0.0",
    "cyrus-core": "workspace:*",
    "cyrus-claude-runner": "workspace:*",
    "cyrus-edge-worker": "workspace:*",
    "cyrus-ndjson-client": "workspace:*",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "file-type": "^21.0.0",
    "fs-extra": "^11.3.0",
    "node-fetch": "^2.7.0",
    "open": "^10.0.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@vitest/ui": "^3.1.4",
    "nodemon": "^2.0.22",
    "vitest": "^3.1.4"
  }
}
