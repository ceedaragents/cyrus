{
  "name": "@cyrus/eslint-config",
  "version": "0.0.1",
  "description": "Shared ESLint and Prettier configuration for Cyrus monorepo",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Config package - no linting needed'",
    "format": "echo 'Config package - no formatting needed'"
  },
  "dependencies": {
    "@eslint/compat": "^1.0.0",
    "@eslint/eslintrc": "^3.0.0",
    "@eslint/js": "^9.25.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "globals": "^16.0.0",
    "prettier": "^3.2.4",
    "typescript-eslint": "^8.30.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^9.25.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}