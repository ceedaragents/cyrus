{
	"name": "cyrus-core",
	"version": "0.0.19",
	"description": "Core business logic for Cyrus",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc && npm run postbuild",
		"postbuild": "if [ -d dist/core/src ]; then cp -r dist/core/src/* dist/ && rm -rf dist/core dist/claude-runner; fi",
		"dev": "tsc --watch",
		"test": "vitest",
		"test:run": "vitest run --passWithNoTests",
		"typecheck": "tsc --noEmit -p tsconfig.typecheck.json"
	},
	"dependencies": {
		"@linear/sdk": "^60.0.0",
		"cyrus-claude-runner": "workspace:*"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"typescript": "^5.3.3",
		"vitest": "^1.1.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
