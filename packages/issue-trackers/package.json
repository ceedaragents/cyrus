{
	"name": "@cyrus/issue-trackers",
	"version": "0.1.0",
	"description": "Issue tracker adapters for Cyrus (Linear, GitHub, Jira, etc.)",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./linear": {
			"types": "./dist/linear/index.d.ts",
			"import": "./dist/linear/index.js"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"cyrus-interfaces": "workspace:*",
		"@linear/sdk": "^60.0.0"
	},
	"devDependencies": {
		"@types/node": "^22.0.0",
		"@vitest/coverage-v8": "^2.1.8",
		"typescript": "^5.7.3",
		"vitest": "^2.1.8"
	},
	"keywords": [
		"cyrus",
		"linear",
		"issue-tracker",
		"adapter"
	],
	"author": "Cyrus Team",
	"license": "MIT"
}
