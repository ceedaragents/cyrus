{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"skipLibCheck": true,
		"types": ["node"],
		"lib": ["ES2022"],
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "Node"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "test"]
}
