{
	"name": "@cyrus/renderers",
	"version": "0.1.0",
	"description": "Renderer implementations for Cyrus (Linear comments, CLI output, etc.)",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./linear": {
			"types": "./dist/linear/index.d.ts",
			"import": "./dist/linear/index.js"
		},
		"./cli": {
			"types": "./dist/cli/index.d.ts",
			"import": "./dist/cli/index.js"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"cyrus-interfaces": "workspace:*",
		"ink": "^5.0.1",
		"react": "^18.3.1",
		"chalk": "^5.3.0",
		"ink-text-input": "^6.0.0",
		"ink-spinner": "^5.0.0"
	},
	"devDependencies": {
		"@types/node": "^22.0.0",
		"@types/react": "^18.3.18",
		"@vitest/coverage-v8": "^2.1.8",
		"typescript": "^5.7.3",
		"vitest": "^2.1.8"
	},
	"keywords": [
		"cyrus",
		"linear",
		"renderer",
		"comment"
	],
	"author": "Cyrus Team",
	"license": "MIT"
}
